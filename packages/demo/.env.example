# Network Configuration
NEXT_PUBLIC_SOLANA_NETWORK=devnet
NEXT_PUBLIC_RPC_URL=https://api.devnet.solana.com
# NEX_PUBLIC_RPC_URL=https://mainnet.helius-rpc.com/?api-key=<YOUR_KEY>
# NEXT_PUBLIC_RPC_URL=https://hidden-nameless-bird.solana-mainnet.quiknode.pro/<YOUR_TOKEN>/

# Tatum API (optional - improves RPC reliability)
TATUM_API_KEY=

# RPC Fallback (v2.1.0 - optional, default: false)
# Enable automatic failover to backup RPCs on errors
ENABLE_RPC_FALLBACK=false
# Comma-separated list of fallback RPC URLs
FALLBACK_RPC_URLS=https://rpc.ankr.com/solana_devnet,https://solana-devnet.g.alchemy.com/v2/demo

# Payment Configuration
CREATOR_WALLET_ADDRESS=your_solana_wallet_address

# Session Configuration (JWT)
SESSION_SECRET=your_32_character_minimum_secret_key
SESSION_DURATION_HOURS=24

# Article Pricing (in lamports)
# 1 SOL = 1,000,000,000 lamports
# 0.01 SOL = 10,000,000 lamports
DEFAULT_ARTICLE_PRICE_LAMPORTS=10000000

# ==========================================
# Agent Chat Demo Configuration
# ==========================================

# OpenAI API Key (required for real AI responses)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-...

# Agent Wallet Secret Key
# Supports two formats:
# 1. Base58 (from Solana CLI): solana-keygen new --no-bip39-passphrase
#    Copy the private key from the JSON file
# 2. Comma-separated bytes: node -e "console.log(require('@solana/web3.js').Keypair.generate().secretKey.toString())"
#
# Fund on Devnet after setup:
#   solana airdrop 2 <address> --url devnet
AGENT_KEYPAIR_SECRET=

# ==========================================
# Custom Facilitator (Optional)
# ==========================================
# To use your own deployed facilitator (e.g. on Railway) for the Agent Demo:
# 1. Deploy facilitator
# 2. Copy the URL (e.g. from Railway -> Service -> Networking)
# 3. Paste it here:
PLATFORM_FACILITATOR_URL=

# Legacy / Explicit configuration
X402_FACILITATOR_URL=https://x402.org/facilitator

